<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCharityNamePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TvCharity_name"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/txt20"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_admin_post_view_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@drawable/baseline_image_24"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tvDescriptionPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/TvCharity_description"
                android:textColor="@color/black"
                android:textSize="@dimen/txt12"
                />

        </LinearLayout>



</androidx.cardview.widget.CardView>